                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.TestsPerOneMillion, StringFormat='{0:N2}'}"
                                    TextColor="#025ebb" />
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="0"
