                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <PanCake:PancakeView
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    CornerRadius="12">
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="30"
                                        Source="ic_tests_white_24dp"
