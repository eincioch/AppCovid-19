                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <PanCake:PancakeView
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
