                                    Text="{Binding Countrie.DeathsPerOneMillion, StringFormat='{0:N2}'}"
                                    TextColor="#d84931" />
                                <Label
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Muertes por un millón/ Deaths Per One Million" />

                            </Grid>


                        </Frame>
                    </StackLayout>

                    <!--  Active  -->
                    <StackLayout Grid.Row="2" Grid.Column="0">
                        <Frame
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,10"
                            BackgroundColor="#e4f3ff"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="160">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!--<ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />-->
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <PanCake:PancakeView
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    CornerRadius="12">
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="30"
                                        Source="ic_active_white_24dp"
                                        WidthRequest="30" />
                                </PanCake:PancakeView>


                                <!--  active  -->
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    d:Text="694426"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.Active, StringFormat='{0:N0}'}"
                                    TextColor="#0098d9" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Activos / Active" />

                                <!--  activePerOneMillion  -->
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    d:Text="94426"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.ActivePerOneMillion, StringFormat='{0:N2}'}"
                                    TextColor="#00a3f4" />
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Activos por un millón / Active Per One Million" />
                            </Grid>
                        </Frame>
                    </StackLayout>

                    <!--  Critical  -->
                    <StackLayout Grid.Row="2" Grid.Column="1">
                        <Frame
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,10"
                            BackgroundColor="#fcf5db"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="160">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!--<ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />-->
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <PanCake:PancakeView
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    CornerRadius="12">
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="30"
                                        Source="ic_critical_white_24dp"
                                        WidthRequest="30" />
                                </PanCake:PancakeView>

                                <!--  critical  -->
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    d:Text="694426"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.Critical, StringFormat='{0:N0}'}"
                                    TextColor="#d69a3c" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Crítico UCI / Critical UCI" />

                                <!--  criticalPerOneMillion  -->
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    d:Text="9426.2"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.CriticalPerOneMillion, StringFormat='{0:N2}'}"
                                    TextColor="#e99e29" />
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Crítico por un millón UCI / Critical Per One Million UCI" />

                            </Grid>
                        </Frame>
                    </StackLayout>

                    <!--  recovered  -->
                    <StackLayout Grid.Row="3" Grid.ColumnSpan="2">
                        <Frame
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,10"
                            BackgroundColor="#dbf3e5"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="145">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!--<ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />-->
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <PanCake:PancakeView
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    CornerRadius="12">
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="40"
                                        Source="ic_recovered_white_24dp"
                                        WidthRequest="40" />
                                </PanCake:PancakeView>

                                <!--  recovered  -->
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    d:Text="95829"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.Recovered, StringFormat='{0:N0}'}"
                                    TextColor="#1aa65b" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Recuperados / Recovered" />

                                <!--  todayRecovered  -->
