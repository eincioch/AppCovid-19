                            </Grid>
                        </Frame>
                    </StackLayout>

                    <!--  tests  -->
                    <StackLayout Grid.Row="4" Grid.ColumnSpan="2">
                        <Frame
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,10"
                            BackgroundColor="#d5e6fa"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="120">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!--<ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />-->
                                    <ColumnDefinition Width="*" />
