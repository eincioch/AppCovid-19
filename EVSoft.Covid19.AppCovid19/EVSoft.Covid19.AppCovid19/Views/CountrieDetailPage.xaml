<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EVSoft.Covid19.AppCovid19.Views.CountrieDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:PanCake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding titleCountrie}"
    mc:Ignorable="d">

    <ContentPage.Resources>

        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="LightSkyBlue" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>

        <ResourceDictionary>
            <Style x:Key="TitleLabelStyle" TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource FlexoRegular}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="13" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <Style x:Key="ContenidLabelStyle" TargetType="{x:Type Label}">
                <Setter Property="FontFamily" Value="{StaticResource FlexoBold}" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="15" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="FontFamily" Value="{StaticResource MontserratRegular}" />
                <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
                <Setter Property="FontSize" Value="{StaticResource MediumSize}" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
            </Style>

            <Style x:Key="FrameStyle" TargetType="Frame">
                <Setter Property="BorderColor" Value="#757575" />
                <Setter Property="Margin">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="Android" Value="5,10,5,0" />
                            <On Platform="iOS" Value="0,5" />
                        </OnPlatform>
                    </Setter.Value>

                </Setter>
                <Setter Property="Padding">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="Android" Value="0,0,0,-1" />
                            <On Platform="iOS" Value="0" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>

                <Setter Property="BackgroundColor">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="Android" Value="{StaticResource WhiteColor}" />
                            <On Platform="iOS" Value="Transparent" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>

                <Setter Property="OutlineColor">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="Android" Value="{StaticResource UCV_1}" />
                            <On Platform="iOS" Value="{StaticResource UCV_1}" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>

                <Setter Property="CornerRadius">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:Single">
                            <On Platform="Android" Value="10" />
                            <On Platform="iOS" Value="0" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>

                <Setter Property="HasShadow" Value="False" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="IsClippedToBounds" Value="True" />

            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>

            <StackLayout Padding="12" HorizontalOptions="Center">

                <Grid RowSpacing="-5" VerticalOptions="CenterAndExpand">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  fecha  -->
                    <StackLayout Grid.Row="0" Grid.ColumnSpan="2">

                        <Frame
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,10"
                            BackgroundColor="#ffffdf"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="140">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!--<ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />-->
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Image
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    HeightRequest="80"
                                    Source="{Binding Countrie.CountryInfo.Flag}"
                                    WidthRequest="50" />

                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    d:Text="2020/05/30 14:50:52"
                                    HorizontalTextAlignment="Center"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding fecha}"
                                    TextColor="#0068d5" />

                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    HorizontalTextAlignment="Center"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Útima actualización / Last Updated" />

                                <!--  continent  -->
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    d:Text="America"
                                    HorizontalTextAlignment="Center"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.Continent, StringFormat='{0:N0}'}"
                                    TextColor="#ee7a00" />

                                <Label
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    HorizontalTextAlignment="Center"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Continente / Continent" />

                                <!--  population  -->
                                <Label
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    d:Text="32568956"
                                    HorizontalTextAlignment="Center"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.Population, StringFormat='{0:N0}'}"
                                    TextColor="#ee7a00" />

                                <Label
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    HorizontalTextAlignment="Center"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Población / Population" />

                            </Grid>
                        </Frame>
                    </StackLayout>

                    <!--<BoxView
                            Grid.Row="2"
                            Grid.Column="0"
                            CornerRadius="10"
                            HeightRequest="1"
                            VerticalOptions="CenterAndExpand"
                            Color="#8a9597" />-->

