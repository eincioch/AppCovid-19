                                    Grid.Row="3"
                                    Grid.Column="0"
                                    d:Text="95829"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.TodayRecovered, StringFormat='{0:N0}'}"
                                    TextColor="#28985c" />
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Hoy Recuperados / Today Recovered" />

                                <!--  recoveredPerOneMillion  -->
