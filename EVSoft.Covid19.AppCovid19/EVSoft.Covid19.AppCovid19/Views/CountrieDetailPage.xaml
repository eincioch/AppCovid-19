                                    Grid.Column="0"
                                    d:Text="13069"
                                    Style="{StaticResource ContenidLabelStyle}"
                                    Text="{Binding Countrie.TodayDeaths, StringFormat='{0:N0}'}"
                                    TextColor="#c70507" />
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Style="{StaticResource TitleLabelStyle}"
                                    Text="Hoy Muertes / Today Deaths" />


                                <!--  deathsPerOneMillion  -->
                                <Label
                                    Grid.Row="5"
